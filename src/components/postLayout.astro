---
import '../pages/sakura-dark.css'
import '../pages/blog/blog.css'
import "../pages/fun-text.css"
import Navbar from "./navbar.astro"

const {frontmatter, headings} = Astro.props;
---

<!Doctype html>
<head>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content={frontmatter.title + " - R2leyser"}>
    <meta property="og:description" content={frontmatter.description}>
    <meta name="theme-color" content="#8ccf7e">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,500;0,700;1,500;1,700&display=swap" rel="stylesheet">
    <title> {frontmatter.title} </title>
</head>



<Navbar selected="blog"/>

<h1>{frontmatter.title}</h1>
<hr>
<div class="blog-layout">
<article>
<slot/>
<span style="text-align: right;"><p>-R2leyser</p></span>
<hr>

<small>{
    frontmatter.date.split('-')
        .reverse()
        .join('/')
        }
</small>

</article>
<aside>
    <ul>
        {
            headings.map( (heading) => 
                <li><a href={"#" + heading.slug}>{heading.text}</a></li>
            )
        }
    </ul>
</aside>
</div>

<style>
    nav {
        position:absolute !important;
        top: 0;
    }
</style>

<script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js?lang=css&amp;skin=sons-of-obsidian"></script>
<script src="../scripts/fun-text.js"></script>
